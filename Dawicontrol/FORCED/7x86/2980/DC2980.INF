[Version]
Signature="$Windows NT$"
Class=SCSIAdapter
ClassGUID={4D36E97B-E325-11CE-BFC1-08002BE10318}
Provider=%StrgCompany%
DriverVer=10/27/2010, 5.10

[ClassInstall32.NT]
Addreg=DC2980_Reg

[DC2980_Reg]
HKR,,,,%SCSIClassName%
HKR,,Installer32,,"SysSetup.Dll,ScsiClassInstaller"
HKR,,Icon,,"-10"
HKR,,LegacyInfOption,,"SCSI"

[DestinationDirs]
DefaultDestDir = 12

[SourceDisksNames]
1 = %StrgDiskLabel%,,

[SourceDisksFiles]
DC2980.SYS = 1

[Manufacturer]
%StrgCompany%=DC2980_Section

[DC2980_Section]
%StrgDevice%=DC2980_Install, PCI\VEN_1000&DEV_000C

[DC2980_Install]
CopyFiles=@DC2980.SYS

[DC2980_Install.Services]
AddService = DC2980, 2, DC2980_Service_Inst, DC2980_EventLog_Inst

[DC2980_Service_Inst]
ServiceType    = 1
StartType      = 0
ErrorControl   = 1
ServiceBinary  = %12%\DC2980.SYS
LoadOrderGroup = SCSI Miniport
AddReg         = DC2980_PNP_AddReg
AddReg         = DC2980_Parm_AddReg

[DC2980_EventLog_Inst]
AddReg = DC2980_EventLog_AddReg

[DC2980_EventLog_AddReg]
HKR,,EventMessageFile,0x00020000,"%%SystemRoot%%\System32\IoLogMsg.dll"
HKR,,TypesSupported,0x00010001,7

[DC2980_PNP_AddReg]
HKR, "Parameters\PnpInterface", "5", 0x00010001, 0x00000001

[DC2980_Parm_AddReg]
HKR, "Parameters\Device", "DriverParameter", REG_SZ, ""

[Strings]
StrgCompany="Dawicontrol GmbH"
StrgDevice="DC-2980 U2W SCSI Hostadapter"
StrgDiskLabel="SCSI Software Installation Disk"

